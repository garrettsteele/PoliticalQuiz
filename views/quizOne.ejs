<%-include("partials/header.ejs")%>

<div id="questionsDiv">

  <h1>CRIMINAL JUSTICE</h1>

  <form method="POST">
    <div>
      <h3>Question 1</h3>
      <h5>Do you support the decriminalization of marijuana</h5>
      <label for="for"><input name="marijuana" value="10" type="radio" required>FOR</label>
      <label for="against"><input name="marijuana" value="1" type="radio">AGAINST</label>
      <label for="neutral"><input name="marijuana" value="5" type="radio">NEUTRAL</label>

    </div>


    <div>
      <h3>Question 2</h3>
      <h5>Should gun purchasers be vetted through background checks? </h5>
      <label for="for"><input name="guns" value="10" type="radio" required>FOR</label>
      <label for="against"><input value="1" name="guns" type="radio">AGAINST</label>
      <label for="neutral"><input name="guns" value="5" type="radio">NEUTRAL</label>

    </div>

    <div>
      <h3>Question 3</h3>
      <h5>Do you support abolishing the death penalty?</h5>
      <label for="for"><input name="death" value="10" type="radio" required>FOR</label>
      <label for="against"><input value="1" name="death" type="radio">AGAINST</label>
      <label for="neutral"><input name="death" value="5" type="radio">NEUTRAL</label>

    </div>


    <button type="submit" class="btn btn-primary submitQuestions" id="criminalJustice" disabled="disabled">Next
      Questions</button>
</div>


<%-include("partials/footer.ejs")%>